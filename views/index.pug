extends layout

block content
  h1= title
  p Welcome to #{title}
  button(type="button", class="btn btn-secondary" onclick="moreClaps()") Press me for Contents
  div(id="target") Clap for me

  script.
    const clap_count=0;
    function moreClaps(){
      clap_count=clap_count+2;
      document.getElementById("target").InnerHTML=clap_count;
    }